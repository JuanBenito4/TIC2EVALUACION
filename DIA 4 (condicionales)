//Instrucciones basicas
//condicional anidado

#include<iostream>//Libreria de cabecera
using namespace std;

int main(){
	//definimos tres variables
	int resp;
	cout<<"********************"<<endl;
	cout<<"*      MENU        *"<<endl;
	cout<<"********************"<<endl;
	cout<<"1. Volver a mostrar el menu"<<endl;
	cout<<"2. Despedirme"<<endl;
	cout<<"3. Salir"<<endl;
	cout<<"ELIGE UNA OPCION (1,2 O 3): ";
	cin>> resp;
	switch(resp){
		case 1:
			cout<<"********************"<<endl;
			cout<<"*      MENU        *"<<endl;
			cout<<"********************"<<endl;
			cout<<"1. Volver a mostrar el menu"<<endl;
			cout<<"2. Despedirme"<<endl;
			cout<<"3. Salir"<<endl;
			cout<<"ELIGE UNA OPCION (1,2 O 3): ";
			break;
		case 2:
			cout<<"Estas despedido";
			break;
		case 3:
			break;
		default:
			cout<<"No has elegido ninguna opcion";
	}
	return 0;
}
